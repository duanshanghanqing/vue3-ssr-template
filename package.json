{
  "name": "vue3_ssr",
  "version": "1.0.0",
  "description": "Vue3 + Server Side Rendering",
  "main": "",
  "repository": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "ts:init": "tsc --init",
    "start": "cross-env NODE_ENV=development node server",
    "dev": "node server",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.js --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.js --hide-modules",
    "pm2:dev": "pm2 restart ecosystem.config.js --only ssr_dev",
    "pm2:test": "pm2 restart ecosystem.config.js --only ssr_test",
    "pm2:sim": "pm2 restart ecosystem.config.js --only ssr_sim",
    "pm2:prod": "pm2 restart ecosystem.config.js --only ssr_prod",
    "pm2:stopdev": "pm2 stop ssr_dev && pm2 delete ssr_dev",
    "pm2:stoptest": "pm2 stop ssr_test && pm2 delete ssr_test",
    "pm2:stopsim": "pm2 stop ssr_sim && pm2 delete ssr_sim",
    "pm2:stopprod": "pm2 stop ssr_prod && pm2 delete ssr_prod"
  },
  "dependencies": {
    "@vue/server-renderer": "^3.0.11",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "lru-cache": "^5.1.1",
    "serve-favicon": "^2.5.0",
    "tailwindcss": "^1.4.6",
    "vue": "^3.0.2",
    "vue-bundle-renderer": "^0.0.3",
    "vue-router": "^4.0.3",
    "vue-server-renderer-fix": "^1.0.0",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@types/node": "^15.0.0",
    "@vue/compiler-sfc": "^3.0.4",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "less": "^3.13.1",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "null-loader": "^4.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.11",
    "typescript": "^4.2.4",
    "vue-loader": "^16.1.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
